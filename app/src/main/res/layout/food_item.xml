<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/foodNameTextView"
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:fontFamily="sans-serif-black"
        android:textStyle="bold"
        android:text="PEPPER"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/numberOfCalories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="200"
        android:fontFamily="sans-serif-black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/calories"
        app:layout_constraintTop_toTopOf="@+id/foodNameTextView" />

    <TextView
        android:id="@+id/calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:fontFamily="sans-serif-light"
        android:text="calories"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numberOfCalories" />

    <Button
        android:id="@+id/deleteBtn"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:text="Delete"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/foodNameTextView"
        app:layout_constraintStart_toStartOf="@+id/foodNameTextView"
        />
</androidx.constraintlayout.widget.ConstraintLayout>